# https://www.codewars.com/kata/5259b20d6021e9e14c0010d4

def reverse_words(text):
    list_of_words = text.split(' ') # splits on the spaces by default
    list_reveresed_words = []
    # print(list_of_words)
    for word in list_of_words:
        wordlength = len(word) # calculate length of the word
        slicedword = word[wordlength::-1] # slicing
        # print (slicedword) # print the reversed string
        list_reveresed_words.append(slicedword)
        # print(list_reveresed_words)
    return " ".join(list_reveresed_words)
